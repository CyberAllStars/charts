    "version": "0.2.0",
    "configurations": [
        {
            "type": "ruby_lsp",
            "name": "Debug script",
            "request": "launch",
            "program": "ruby ${file}"
        },
        {
            "type": "ruby_lsp",
            "name": "Debug test",
            "request": "launch",
            "program": "ruby -Itest ${relativeFile}"
        },
        {
            "type": "ruby_lsp",
            "name": "Attach debugger",
            "request": "attach"
        }
    ]
}

